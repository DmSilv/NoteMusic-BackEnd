# Configuração de Produção - NoteMusic Backend

# Ambiente
NODE_ENV=production
PORT=3333

# MongoDB Atlas (substitua pelos seus dados)
MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.xxxxx.mongodb.net/notemusic?retryWrites=true&w=majority

# JWT Secret (gere um secret seguro)
JWT_SECRET=notemusic_super_secret_key_2024_production_secure
JWT_EXPIRES_IN=7d

# CORS - URLs permitidas (adicione as URLs do seu app)
CORS_ORIGINS=https://expo.dev,https://seu-app.expo.dev

# Email (opcional - para recuperação de senha)
EMAIL_USER=seu-email@gmail.com
EMAIL_PASS=sua-senha-app-gmail

# Trust Proxy (necessário para hospedagem)
TRUST_PROXY=1

# Frontend URL (para referência)
FRONTEND_URL=https://expo.dev













